<div class="container my-5">
  <div class="row">
    <div class="col text-center">
      <div class="p-3 mb-2 bg-light text-black">
        <h2>新規会員登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :ハンドルネーム %><br>
            <%= f.text_field :screen_name %>
          </div>

          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-xs-4" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" ,class: "col-xs-4" %>
          </div>

          <div class="field">
            <%= f.label :パスワード確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "col-xs-4" %>
          </div>

          <div class="actions my-4">
            <%= f.submit "登録" %>
          </div>
        <% end %>
        <%= render "user/shared/links" %>
      </div>
    </div>
  </div>
</div>


