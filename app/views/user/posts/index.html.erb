<div class="background">
<div class="bacground-content">
<div class="container my-5">
  <div class="row">
    <div class="col text-center">
      <div class="text-white">
        <div class="new_group">
        <h2>Post</h2>
          <form class="my-2 my-lg-0">
            <div class="my-3 mr-sm-2">
              <%= form_with url: user_posts_path, method: :get, local: true do |f| %>
                <%= f.text_field :search %>
                <%= f.submit "Search", name: nil %>
              <% end %>
            </div>
          </form>
          <table class="table table-hover table-inv text-white">
          <thead>
            <th>Screen Name</th>
            <th>Title</th>
            <th></th>
            <th></th>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.user.screen_name %></td>
                <td><%= link_to post.title,user_post_path(post),class: "Editlink" %></td>
                <td><%= link_to "#{post.comments.count} comment", user_post_path(post.id),class: "Editlink" %></td>
                <% if post.user == current_user %>
                <td><%= link_to "edit", edit_user_post_path(post.id),class: "Editlink" %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
          </table>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>