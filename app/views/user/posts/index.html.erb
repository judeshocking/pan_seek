<div class="container my-5">
  <div class="row">
    <div class="col text-center">
      <div class="p-3 mb-2 bg-light text-black">
        <h2>レビュー</h2>
          <table class="table table-hover table-inv">
          <thead>
            <th>ハンドルネーム</th>
            <th>タイトル</th>
            <th></th>
            <th></th>
          </thead>
          <tbody>
            <% @post.each do |post| %>
              <tr>
                <td><%= post.user.screen_name %></td>
                <td><%= link_to post.title,user_post_path(post) %></td>
                <td><%= link_to "編集", edit_user_post_path(post.id) %></td>
                <td><%= link_to "削除", user_post_path(post.id),method: :delete, "data-confirm" => "本当に削除してよろしいですか?" %></td>
              </tr>
            <% end %>
          </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>