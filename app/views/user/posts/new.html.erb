<div class="container my-5">
  <div class="row">
    <div class="col text-center">
      <div class="p-3 mb-2 bg-light text-black">
        <h2>投稿</h2>
        <%= form_with(model: @post, url: user_posts_path, local: true) do |f| %>
        <div class="title">
          <h5>タイトル（店舗名、商品名など</h5>
          <%= f.text_area :title %>
        </div>
        <%= f.label :画像 %>
        <%= f.file_field :image,accept: "image/*" %>
        </div>
        <div class="field" id="star">
          <%= f.label :rate, "評価：" %>
          <%= f.hidden_field :rate, id: :review_star %>
          <script>
            $('#rate').empty();
            new Raty(document.querySelector('#star'), {
              size     : 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              scoreName: 'post[rate]',
              half: true
            });
          </script>
        </div>
        <div class="form-group row">
          <%= f.text_area :text, class: 'form-control',size: "20x10", placeholder: "レビュー無記入でも投稿できます" %>
        </div>
        <div class="col text-center">
          <%= f.submit :投稿, class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

