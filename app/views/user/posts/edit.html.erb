<div class="background">
<div class="bacground-content">
  <div class="container my-5">
    <div class="row">
      <div class="col text-center">
        <div class="text-light">
          <div class="new_group">
            <h2>Post edit</h2>
            <%= form_with(model: @post, url: user_post_path, local: true) do |f| %>
            <div class="title">
              <h5>Title（店舗名、商品名など)</h5>
              <%= f.text_area :title %>
            </div>
            <div class="image">
              <%= f.label :Image %>
              <%= f.file_field :image,accept: "image/*" %>
            </div>
            <div class="form-group row">
              <%= f.text_area :text, class: 'form-control',size: "20x10", placeholder: "コメント" %>
            </div>
            <div class="col text-center">
              <%= f.submit :Edit, class: "btn btn-primary" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
