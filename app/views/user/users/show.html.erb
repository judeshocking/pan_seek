<div class="container my-5">
  <div class="row">
    <div class="col text-center">
      <div class="my_page_group">
        <div class="text-black">
        <h2>My page</h2>
          <div class=”card” style=”width: 18rem;”>
            <div class="card-body">
              <%= image_tag @user.get_profile_image(600,600),class: "rounded-circle"%>
              <div class="card-title"><h3><%= @user.screen_name %></h3></div>
                <div class="card-text"><%= link_to "edit", edit_user_user_path,class: "my-pagelink" %></div>
              </div>
            </div>
          </div>
          <table class="table table-striped table-hover text-center">
            <thead>
              <th>Post</th>
              <th>Comment</th>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= link_to post.title, user_post_path(post.id),class: "my-pagelink" %></td>
                  <td><%= "#{post.comments.count} comment" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
</div>