<div class="container my-5">
  <div class="row">
    <div class="col text-center">
      <div class="p-3 mb-2 bg-light text-black">
        <div class="background">
        <h2>ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "col-xs-4" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password" ,class: "col-xs-4" %>
          </div>

          <div class="actions my-4">
            <%= f.submit "ログイン" %>
          </div>
        <% end %>
        </div>
        <%= render "user/shared/links" %>
      </div>
    </div>
  </div>
</div>

