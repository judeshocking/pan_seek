<div class="container my-5">
  <div class="row">
    <div class="col text-center">
      <div class="p-3 mb-2 bg-light text-black">
        <div class="row mt-4 mb-3 text-center text-md-left">
          <div class="col-lg-6">
            <table class="table table-borderless">
              <tbody>
                <tr>
                  <td>
                    <%= image_tag @store_information.store_image_url, size: "300x300", format: "jpeg", fallback: "no_image.jpeg", class:"lb" %>
                  </td>
                </tr>
                <tr>
                  <td>店舗名</td>
                  <td><%= @store_information.name %></td>
                </tr>
                <tr>
                  <td>住所</td>
                  <td><%= @store_information.address %></td>
                </tr>
                <tr>
                  <td>アクセス</td>
                  <td><%= @store_information.access %></td>
                </tr>
                <tr>
                  <td>営業時間</td>
                  <td><%= @store_information.business_hours %></td>
                </tr>
                <tr>
                  <td>イートインスペース</td>
                  <td><%= @store_information.eat_in_space %></td>
                </tr>
                <tr>
                  <td>定休日</td>
                  <td><%= @store_information.regular_holiday %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <h4>レビュー</h4>
        <%= form_with model: [@store_information, @comment] do |f| %>
        <div class="" id="star">
            <%= f.label :rate,'評価 :', class:'col-md-3 col-form-label' %>
            <%= f.hidden_field :rate, id: :review_star %>
          </div>

          <script>
            $('#star').raty({
              size     : 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              scoreName: 'post[rate]',
              half: true,
            });
          </script>
          <div class="form-group row">
            <%= f.label :コメント %>
            <%= f.text_area :string, class:"form-control", size: "20x10", placeholder: "レビュー無記入でも投稿できます"%>
          </div>
          <div class="col text-center">
            <%= f.submit :投稿, class: "btn btn-primary" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>