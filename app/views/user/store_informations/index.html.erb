<div class="container my-5">
  <div class="row">
    <h2>店舗一覧(全<%= @store_informations.count %>件)</h2>
  </div>

  <div class="row mt-3 mb-3 text-center text-md-left">
    <% @store_informations.first(4).each do |store_information| %>
    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
      <div>
        <%= image_tag store_information.store_image_url, size: "200x200", format: "jpeg", fallback: "no_image.jpeg", class:"lb" %>
        <div class="card-body">
          <p class="card-text"><%= store_information.name %></p>
          </div>
      </div>
    </div>
    <% end %>
  </div>
</div>