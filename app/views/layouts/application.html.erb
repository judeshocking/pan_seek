<!DOCTYPE html>
<html>
  <head>
    <title>PanSeek</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <div class="container my-5">
      <div class="text-center">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <a class="navbar-brand"><%= link_to 'PAN-SEEK', user_root_path %></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to user_user_path(current_user) do %>
                <i class="nav-link" >マイページ</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to user_store_informations_path do %>
                <i class="nav-link">店舗一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_post_path do %>
                <i class="nav-link">投稿</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to user_posts_path do %>
                <i class="nav-link">投稿一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path,method: :delete do %>
                <i class="nav-link">ログアウト</i>
                <% end %>
              </li>
              <% end %>
            </ul>
            <form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
          </div>
        </nav>
      </div>
    </div>
  </header>

  <body>
    <%= yield %>
  </body>
</html>