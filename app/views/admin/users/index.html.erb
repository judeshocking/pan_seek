<div class="container my-5">
  <div class="row">
    <h2>ユーザー一覧</h2>
  </div>
  <div class="row mt-3">
    <div class="offset-sm-1 col-sm-10">
      <table class="table table-striped table-hover text-center">
        <thead>
          <tr>
            <th>ユーザーID</th>
            <th>ハンドルネーム</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to admin_user_path(user) do %>
                <% user.screen_name %>
                <% end %>
            </td>
            <td><%= user.email %></td>
            <td><% if user.is_deleted == false %>
                 有効
                 <% else %>
                 退会
                 <% end %>
              </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>