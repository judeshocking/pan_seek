<div class="container my-5">
  <div class="row">
    <h2>店舗新規登録</h2>
  </div>

  <div class="row d-flex justify-content-center">
    <span><%= flash[:item_created_error] %></span>
  </div>

  <%= form_with model: [:admin, @store_information], local: true do |f| %>
    <div class="row mt-5">
      <div class="col-sm-4">
        <%= f.label :店舗画像 %>
        <%= f.file_field :store_image_url,accept: "image/*" %>
      </div>
      <div class="col-sm-5">
        <div class="form-group row">
          <%= f.label :店舗名, class:"col-sm-4" %>
          <%= f.text_field :name, class:"form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :住所, class:"col-sm-4" %>
          <%= f.text_field :address, class:"form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :アクセス, class:"col-sm-4" %>
          <%= f.text_field :access,class:"form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :営業時間, class: "col-sm-4" %>
          <%= f.text_field :business_hours, class: "form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :イートインスペース, class: "col-sm-4" %>
          <%= f.text_field :eat_in_space, class: "form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :定休日, class: "col-sm-4" %>
          <%= f.text_field :regular_holiday, class: "form-control col-sm-8" %>
        </div>
        <div class="col-sm-2 mt-auto ml-5">
          <%= f.submit :新規登録, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>